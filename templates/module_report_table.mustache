{{!
    @template local_time_tracking/module_report_table

    Display a custom table for the module report.

    Example context (json):
    {
        "groups": [
            {
                "uniqueid": "abc123",
                "activitymodule": "Announcements",
                "totalelapsedtime": "12:34:56",
                "firstaccess": "12/34/56",
                "lastaccess": "12/34/56",
                "subrows": [
                    {
                        "uniqueid": "abc123",
                        "activitymodule": "Announcements",
                        "elapsedtime": "12:34:56",
                        "timecreated": "12/34/56",
                        "timemodified": "12/34/56"
                    }
                ]
            }
        ]
    }
}}
{{#groups}}
    <tbody>
        <tr class="clickable bg-gray" data-toggle="collapse" data-target="#group-of-rows-{{uniqueid}}" aria-expanded="false" aria-controls="group-of-rows-{{uniqueid}}">
            <td><i class="fa fa-plus-square"></i> {{{activitymodule}}}</td>
            <td>{{{totalelapsedtime}}}</td>
            <td>{{{firstaccess}}}</td>
            <td>{{{lastaccess}}}</td>
        </tr>
    </tbody>
    <tbody id="group-of-rows-{{uniqueid}}" class="collapse">
        {{#subrows}}
        <tr>
            <td> â€” {{{activitymodule}}} {{#str}}session, local_time_tracking{{/str}}</td>
            <td>{{{elapsedtime}}}</td>
            <td>{{{timecreated}}}</td>
            <td>{{{timemodified}}}</td>
        </tr>
        {{/subrows}}
    </tbody>
{{/groups}}